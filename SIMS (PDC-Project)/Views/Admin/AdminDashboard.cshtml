@*@model SIMS__PDC_Project_.Models.Student*@
@model SIMS__PDC_Project_.ViewModel.Student_Teacher


@{
    ViewBag.Title = "AdminDashboard";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-success">All Users</h1>

    @* ------------------- Students Section -------------------- *@
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Students</h4>
        </div>
        <div class="card-body p-0" style="max-height: 300px; overflow-y: auto;">
            @if (TempData["StudentErrorMessage"] != null)
            {
                <div class="alert alert-danger m-3">
                    @TempData["StudentErrorMessage"]
                </div>
            }
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Name</th>
                        <th>ARID No</th>
                        <th>Phone No</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Campus</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students)
                    {
                        <tr class="text-center align-middle">
                            <td>@student.id</td>
                            <td>@student.name</td>
                            <td>@student.aridNo</td>
                            <td>@student.phoneNo</td>
                            <td>@student.email</td>
                            <td>@student.reqStatus</td>
                            <td>@student.campus</td>
                            <td class="p-1">
                                <a href="@Url.Action("Edit", "Student", new { id = student.id })" class="btn btn-sm btn-warning w-100">Edit</a>
                            </td>
                            <td class="p-1">
                                <a href="@Url.Action("Delete", "Student", new { id = student.id })" class="btn btn-sm btn-danger w-100">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <hr />


    @* ------------------- Advisor Section -------------------- *@
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Advisors</h4>
        </div>
        <div class="card-body p-0" style="max-height: 300px; overflow-y: auto;">
            @if (TempData["AdvisorErrorMessage"] != null)
            {
                <div class="alert alert-danger m-3">
                    @TempData["AdvisorErrorMessage"]
                </div>
            }
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Phone No</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Campus</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advisor in Model.Advisors)
                    {
                        <tr class="text-center align-middle">
                            <td>@advisor.id</td>
                            <td>@advisor.name</td>
                            <td>@advisor.phoneNo</td>
                            <td>@advisor.email</td>
                            <td>@advisor.reqStatus</td>
                            <td>@advisor.campus</td>
                            <td class="p-1">
                                <a href="@Url.Action("Edit", "Student", new { id = advisor.id })" class="btn btn-sm btn-warning w-100">Edit</a>
                            </td>
                            <td class="p-1">
                                <a href="@Url.Action("Delete", "Student", new { id = advisor.id })" class="btn btn-sm btn-danger w-100">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
