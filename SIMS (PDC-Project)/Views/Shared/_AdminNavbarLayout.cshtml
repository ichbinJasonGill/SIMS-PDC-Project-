<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .nav-hover {
            color: white;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .nav-hover:hover {
                color: #f8d15a;
                text-shadow: 0 0 6px rgba(248, 209, 90, 0.6) !important;
                /*color: #f8d15a;*/ /* a soft golden tone */
                transform: translateY(-3px); /* slight lift effect */
                text-decoration: none;
            }
    </style>
</head>
<body>
    <!-- Make sure Bootstrap Icons are loaded in your layout -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <nav class="navbar navbar-expand-sm navbar-dark bg-success ">
        <div class="container w-100" style="max-width: 95vw;">
            @Html.ActionLink("BIIT Sports Inventory Management System", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand text-white fs-2" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("All Users", "AllUsers", "Admin", new { area = "" }, new { @class = "nav-link nav-hover text-white fw-semibold" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Users Requests", "UserRequests", "Admin", new { area = "" }, new { @class = "nav-link nav-hover text-white fw-semibold" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Equipments", "Equipments", "Admin", new { area = "" }, new { @class = "nav-link nav-hover text-white fw-semibold" })
                    </li>
                </ul>

                <!-- Simple clickable profile icon -->
                @*<a href="@Url.Action("Profile", "Admin")" class="text-white fs-1 px-5">
                    <i class="bi bi-person-circle"></i>
                </a>*@
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
