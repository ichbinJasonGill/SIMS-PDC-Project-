@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

<style>
    .form-check-input[type="radio"] {
        accent-color: #28a745 !important; /* Force green color */
    }
</style>


<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4 w-100" style="max-width: 400px;">

        <h2 class="text-center text-success mb-4">Login</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center" role="alert">
                @TempData["Message"]
            </div>
        }
        else if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        @using (Html.BeginForm("Login", "LoginSignup", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="mb-3">
                @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Enter your username" })
                @Html.ValidationMessage("username", "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.Password("pass", null, new { @class = "form-control", placeholder = "Enter your password" })
                @Html.ValidationMessage("pass", "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label d-block mb-2">Select Role:</label>

                <div class="form-check form-check-inline">
                    @Html.RadioButton("user", "student", true, new { @class = "form-check-input", id = "student" })
                    <label class="form-check-label" for="student">Student</label>
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButton("user", "advisor", false, new { @class = "form-check-input", id = "advisor" })
                    <label class="form-check-label" for="advisor">Advisor</label>
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButton("user", "admin", false, new { @class = "form-check-input", id = "admin" })
                    <label class="form-check-label" for="admin">Admin</label>
                </div>
            </div>


            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success">Login</button>
            </div>

            <p class="text-center">
                Don't have an account? @Html.ActionLink("Signup", "Signup", "LoginSignup")
            </p>
        }
    </div>
</div>
